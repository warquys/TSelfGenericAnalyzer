[*.cs]

# TSG001: Generic parameter TSelf is not the implementing/inheriting class
dotnet_diagnostic.TSG001.severity = error
dotnet_tselfgeneric.tself_attribute_name = SandBox.Attributes.TSelfAttribute
dotnet_tselfgeneric.tself_attribute_name.enable = true
dotnet_tselfgeneric.tself_param_name = TSelf
dotnet_tselfgeneric.tself_param_name.enable = true

